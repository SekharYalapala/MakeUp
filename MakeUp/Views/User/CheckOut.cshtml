@using MakeupOnline.Models
@{ ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml"; }

<h2>Check Out Shopping Cart</h2>


<br />
  @using (Html.BeginForm("ProcessOrder", "User", FormMethod.Post, new { id = "customer-form" }))
  {


<table>
    <tr>
        <td colspan="3" style="text-align:center;"> <b> Customer's Information</b> </td>
    </tr>
    <tr>
        <td>   Customer Name:</td>
        <td> <input type="text" name="cusName"></td>
    </tr>
    <tr>
        <td>   Customer Phone Number:</td>
        <td> <input type="text" name="cusPhone"></td>
    </tr>
    <tr>
        <td>   Customer Email:</td>
        <td> <input type="text" name="cusEmail"></td>
    </tr>
    <tr>
        <td>   Customer Address:</td>
        <td> <input type="text" name="cusAddress"></td>
    </tr>
    <tr>
        <td>   COD(Cash on delivery):</td>
        <td> <input type="radio" name="cusPayment" checked="checked"></td>
    </tr>

    <tr>
        <td colspan="3"><input type="submit" value="Process Order" class="update-shopping" /></td>
    </tr>
</table>
  }

  <script type="text/javascript">
      $("#customer-form").validate({
          rules: {
              cusName: { required: true },
              cusPhone: { required: true },
              cusEmail: { required: true },
              cusAddress: { required: true }
              
          }
      });
  </script>