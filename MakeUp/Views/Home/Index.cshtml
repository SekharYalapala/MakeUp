
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
    <link href="~/Content/Style.css" rel="stylesheet" />
</head>
<body>
    <div>
        <div class="div-container">
            <div class="div-header">
                <b style="font-size:30px">
                    Sparkle
                    Online Shopping Make up Products
                </b>
            </div><!--div-header-->

            <div class="clear"></div>
            <div class="div-topmenu">
                <ul>
                    <li>
                        @Html.ActionLink("Home", "Index", "Home")
                    </li>

                    <li>
                        @Html.ActionLink("Products", "ProductsIndex", "Products")
                    </li>
                    <li>
                        @Html.ActionLink("Contact Us", "ContactUsIndex", "ContactUs")
                    </li>
                    <li>
                        @Html.ActionLink("Cart", "Index", "ShoppingCart")
                    </li>
                    <li>
                        @Html.ActionLink("Register", "Register", "User")
                    </li>
                </ul>
            </div><!--div-topmenu-->
            <div class="clear"></div>
            <div class="div-left">
                <div class="category-title">Category</div><!--category-title-->
                <div class="category-list">
                    @Html.Action("CategoryPartial", "Category")
                </div><!--category-list-->
            </div><!--div-left-->
            @*<div class="container">
            <div class="box box1"></div>
            <div class="box box2"></div>
        </div>*@
            <!--image slider start-->
            <div class="slider">
                <div class="slides">
                    <!--radio buttons start-->
                    <input type="radio" name="radio-btn" id="radio1">
                    <input type="radio" name="radio-btn" id="radio2">
                    <input type="radio" name="radio-btn" id="radio3">
                    <input type="radio" name="radio-btn" id="radio4">
                    <!--radio buttons end-->
                    <!--slide images start-->
                    <div class="slide first">
                        
                        <img src="~/Media/Images/Layout/My project.png"width="2000" height="600" class="center-block" />
                    </div>
                    <div class="slide">

                        <img src="~/Media/Images/Layout/My project (1).png"width="2000" height="600" class="center-block" />
                    </div>
                    <div class="slide">

                        <img src="~/Media/Images/Layout/My project (2).png"width="2000" height="600" class="center-block"/>
                    </div>
                    <div class="slide">

                        <img src="~/Media/Images/Layout/My project (3).png"width="2000" height="600" class="center-block" />
                    </div>
                    <!--slide images end-->
                    <!--automatic navigation start-->
                    <div class="navigation-auto">
                        <div class="auto-btn1"></div>
                        <div class="auto-btn2"></div>
                        <div class="auto-btn3"></div>
                        <div class="auto-btn4"></div>
                    </div>
                    <!--automatic navigation end-->
                </div>
                <!--manual navigation start-->
                <div class="navigation-manual">
                    <label for="radio1" class="manual-btn"></label>
                    <label for="radio2" class="manual-btn"></label>
                    <label for="radio3" class="manual-btn"></label>
                    <label for="radio4" class="manual-btn"></label>
                </div>
                <!--manual navigation end-->
            </div>
            <!--image slider end-->

            <!--<div class="div-main">

                <div class="clear">
                    <div class="main-content">
                        <div class="content-image">

                            <img src="~/Media/Images/Layout/My project (3).png" style="float: left; width: 1000px; height: 600px;" />
                        </div>--><!--content-image-->
                    <!--</div>--><!--main-content-->

                <!--</div>--><!--div-main-->
                <script type="text/javascript">
    var counter = 1;
    setInterval(function(){
      document.getElementById('radio' + counter).checked = true;
      counter++;
      if(counter > 4){
        counter = 1;
      }
    }, 5000);
                </script>
            </div>
</body>
</html>
